@model CreateServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<form method="post" enctype="multipart/form-data">
    <label>Hizmet Görseli</label>
    @* <input type="file" asp-for="ServiceIcon" class="form-control" /> *@
    <input type="file" id="ServiceIconUpload" name="ServiceIconUpload" class="form-control-file" />

    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Hizmet Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />

    <button class="btn mb-1 btn-rounded btn-outline-success">Hizmeti Ekle</button>
</form>

